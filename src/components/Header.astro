---
import { Image } from "astro:assets";
import logo from "../images/logo.png";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<nav class="border-gray-200">
    <div
        class="max-w-screen-xl flex flex-wrap items-center justify-center mx-auto p-4"
    >
        <a href={import.meta.env.PUBLIC_SELF_URL} class="flex items-center">
            <Image src={logo} alt={title} class="h-52 w-52" />
            <p class="mr-8 ml-8 text-6xl">
                {title}
            </p>
        </a>
    </div>
</nav>
